let tz = -14400 /3600;


convertTime = (tz) =>{
let time = new Date().getUTCHours();
let utcMin = new Date().getUTCMinutes();

if(time === 0){
time = 12;
}
if(utcMin < 10){
utcMin = "0"+utcMin;
}
	if(Number.isInteger(tz)){
    time = time + tz;
		time = time % 12;
    time = time + ":" + utcMin;
}else{
		time = time + Math.trunc(tz);
		time = time % 12;
    time = time + ":" + utcMin ;
}
return time
}

document.write(convertTime(4.5));